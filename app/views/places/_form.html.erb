<%= form_for @place, :html => { :class => "form-horizontal event" } do |f| %>

  <% if @place.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@place.errors.count, "error") %> prohibited this event from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @place.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :timezone, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :timezone, Place::TIMEZONES, :class => 'form-control' %>
    </div>
    <%=f.error_span(:timezone) %>
  </div>
  <div class="form-group">
    <%= f.label :tax_rate, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :tax_rate, :class => 'form-control' %>
    </div>
    <%=f.error_span(:tax_rate) %>
  </div>
  <div class="form-group">
    <%= f.label :currency, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :currency, Place::CURRENCIES, :class => 'form-control' %>
    </div>
    <%=f.error_span(:currency) %>
  </div>
  <div class="form-group">
    <%= f.label :date_format, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :date_format, :class => 'form-control' %>
    </div>
    <%=f.error_span(:date_format) %>
  </div>
  <div class="form-group">
    <%= f.label :time_format, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :time_format, :class => 'form-control' %>
    </div>
    <%=f.error_span(:time_format) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                places_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>