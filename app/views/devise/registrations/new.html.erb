<%= render partial: "layouts/shared/uploadcare_includes" %>

<h1><%= t('.sign_up') %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <%= render partial: 'shared/profile/form/personal', locals: {f: f, user: resource} %>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>

    <% if @minimum_password_length %>
      <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>

<%= render partial: "layouts/shared/calentim_includes"%>
<script>
  var calentimOptions = {
    maxDate: moment("<%= (Time.current - 18.years).to_date %>", "YYYY-MM-DD"),
    showHeader: false, // Hide selected dates
    showFooter: false, // Hide ranges
    singleDate: true, // No date range
    showTimePickers: false, // Date only
    calendarCount: 1, // Only show a single calendar
    format: "YYYY/MM/DD", // A more easily parsed format
  };

  $(".calentim").calentim(calentimOptions);
</script>