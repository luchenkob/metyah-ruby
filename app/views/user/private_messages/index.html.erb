<p id="notice"><%= notice %></p>

<h1>User Private Messages</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Sender</th>
      <th>Recipient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_private_messages.each do |user_private_message| %>
      <tr>
        <td><%= user_private_message.content %></td>
        <td><%= user_private_message.sender %></td>
        <td><%= user_private_message.recipient %></td>
        <td><%= link_to 'Show', user_private_message %></td>
        <td><%= link_to 'Edit', edit_user_private_message_path(user_private_message) %></td>
        <td><%= link_to 'Destroy', user_private_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

