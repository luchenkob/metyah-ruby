<%= form_with url: user_voting_vote_path do |f| %>
  <%= f.hidden_field :voter_id, value: voter.id %>
  <%= f.hidden_field :votable_id, value: votable.id %>
  <%= f.hidden_field :action, value: action %>
  <%= f.hidden_field :action_scope, value: action_scope %>
  <%= button_tag(type: "submit", class: "btn btn-link") do %>
    <i class="now-ui-icons <%= icon_class %>" style='color: <%= icon_color %>'></i>
  <% end %>
<% end %>
